<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div class="alert alert-warning">
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= f.label :content, 'タスク', class: 'col-xs-3 control-label col-form-label' %>
    <div class="col-xs-9">
      <%= f.text_field :content, class: 'form-control' %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :status, 'ステータス', class: 'col-xs-3 control-label col-form-label' %>
    <div class="col-xs-9">
      <%= f.select :status, [["未完了", "未完了"], ["完了", "完了"]], {}, class: 'form-control' %>
    </div>
  </div>
  
  <% if task.persisted? %>
    <%= f.submit '変更', class: 'btn btn-primary col-xs-offset-3' %>
  <% else %>
    <%= f.submit '追加', class: 'btn btn-primary col-xs-offset-3' %>
  <% end %>

<% end %>



