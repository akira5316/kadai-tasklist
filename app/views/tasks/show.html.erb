<h1>id: <%= @task.id %> の詳細ページ</h1>

<table class="table table-bordered table-hover">
  <tr>
    <th>id</th>
    <td><%= @task.id %></td>
  </tr>
  <tr>
    <th>タスク名</th>
    <td><%= @task.content %></td>
  </tr>
  <tr>
    <th>ステータス</th>
    <% if @task.status == "完了" %>
      <td><span class="label label-default"><%= @task.status %></span></td>
    <% else %>
      <td><span class="label label-danger"><%= @task.status %></span></td>
    <% end %>
  </tr>
</table>

<%= link_to 'このタスクを編集する', edit_task_path(@task), class: 'btn btn-default' %>
<%= link_to 'このタスクをクリアする', @task, method: :delete, data: { confirm: '本当にクリアしてよろしいですか？' }, class: 'btn btn-warning' %>
