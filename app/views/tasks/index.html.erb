<h1>タスク一覧</h1>

<% if @tasks.any? %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>id</th>
        <th>タスク名</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%=link_to task.id, task %></td>
          <td><%= task.content %></td>
          <% if task.status == "完了" %>
            <td><span class="label label-default"><%= task.status %></span></td>
          <% else %>
            <td><span class="label label-danger"><%= task.status %></span></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
   <%= paginate @tasks %> 
  </div>
<% end %>


<%= link_to '新規タスクの追加', new_task_path, class: 'btn btn-primary' %>
